# This file was generated by Chef for <%= node['fqdn'] %>
# Do NOT modify this file by hand!

host <%= node['munin']['host'] %>
port <%= node['munin']['port'] %>

user <%= node['munin']['user'] %>
group <%= node['munin']['group'] %>
background 1
setsid 1

log_level <%= node['munin']['log_level'] %>
log_file <%= node['munin']['log_file'] %>
pid_file <%= node['munin']['pid_file'] %>

global_timeout <%= node['munin']['global_timeout'] %>
timeout <%= node['munin']['timeout'] %>

<% node['munin']['ignore_files'].each do |file| %>
ignore_file <%= file %>
<% end %>

<% if node['munin']['hostname'] %>
host_name <%= node['munin']['hostname'] %>
<% end %>

allow ^127\.0\.0\.1$
allow ^::1$
<% Array(node['munin']['allows']).each do |allow| %>
allow <%= allow %>
<% end %>
